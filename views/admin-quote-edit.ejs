<%- include _admin-header -%>

<div class="portlet light form-fit bordered">
    <div class="portlet-title">
        <div class="caption"><i class="fa fa-user"></i>
            <span class="caption-subject sbold uppercase">
                Quote edit
            </span>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form action="" class="form-horizontal form-bordered" method="post">
            <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-3">Name</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="name"  <%= quote.customer ? 'disabled' : '' %> value="<%= quote.name %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Number</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="number" <%= quote.customer ? 'disabled' : '' %>  value="<%= quote.number %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Email</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="email" <%= quote.customer ? 'disabled' : '' %>  value="<%= quote.email %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Code</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="code" <%= quote.customer ? 'disabled' : '' %>  value="<%= quote.code %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Street</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="street" <%= quote.customer ? 'disabled' : '' %>  value="<%= quote.street %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Town</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="town" <%= quote.customer ? 'disabled' : '' %>  value="<%= quote.town %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Tiling</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="tiling" value="<%= quote.tiling %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Size 1</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="size_1" value="<%= quote.size_1 %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Size 2</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="size_2" value="<%= quote.size_2 %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Size 3</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="size_3" value="<%= quote.size_3 %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Product id</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="id_product" value="<%= quote.id_product %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Product title</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="title_product" value="<%= quote.title_product %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Subscribe</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="subscribe" value="<%= quote.subscribe %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Status</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="status" value="<%= quote.status %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Notes</label>
                    <div class="col-md-4">
                        <textarea class="form-control" name="notes"><%= quote.notes %></textarea>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn dark">
                            <i class="fa fa-check"></i> Save
                        </button>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
    </div>
</div>

<%- include _admin-footer -%>