<%- include _admin-header -%>

<div class="portlet light form-fit bordered">
    <div class="portlet-title">
        <div class="caption"><i class="fa fa-user"></i>
            <span class="caption-subject sbold uppercase">
                Adding user
            </span>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form action="" class="form-horizontal form-bordered" method="post">
            <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-3">Username</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" maxlength="256" name="username">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Password</label>
                    <div class="col-md-4">
                        <input type="password" class="form-control" maxlength="256" name="password">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Confirm password</label>
                    <div class="col-md-4">
                        <input type="password" class="form-control" maxlength="256" name="password2">
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn dark">
                            <i class="fa fa-plus"></i> Add
                        </button>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
    </div>
</div>

<%- include _admin-footer -%>